{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "error",
    "no-invalid-regexp": "error"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "alias": {
          "@src": "./src",
          "@arrays": "./src/arrays",
          "@linkedLists": "./src/linkedLists",
          "@hashTables": "./src/hashTables",
          "@stacks": "./src/stacks",
          "@queues": "./src/queues",
          "@undirectedGraph": "./src/graphs/UndirectedGraph",
          "@trees": "./src/trees"
        }
      }
    }
  }
}
